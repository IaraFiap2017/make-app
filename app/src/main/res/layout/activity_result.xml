<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.photo.photoapp.ResultActivity"
    android:background="#dd3c71"
    android:orientation="vertical">

    <ImageView android:id="@+id/imgLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo_small"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp" />

    <ImageView android:id="@+id/imgPreview"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="45dp"
        android:layout_toEndOf="@+id/imgLogo" />

    <TextView
        android:id="@+id/txtResponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Um minuto, estou analisando ..."
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button android:id="@+id/btnMontar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recomendar make!"
        android:textSize="14dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txtResponse"
        android:layout_alignEnd="@+id/txtResponse" />

    <Button android:id="@+id/btnRecomendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="outra foto"
        android:textSize="14dp"
        android:layout_alignBaseline="@+id/btnMontar"
        android:layout_alignBottom="@+id/btnMontar"
        android:layout_alignStart="@+id/txtResponse" />

</RelativeLayout>
